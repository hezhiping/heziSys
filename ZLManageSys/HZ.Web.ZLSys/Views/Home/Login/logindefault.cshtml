@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.SysName-登录</title> 
    <style>
        html,body {
            height:100%;
            width:100%;
             margin:0; 
             padding:0;
        }
    </style>
</head>
<body style="background: url(@Url.Content("~/Content/Images/bg1.jpg")) no-repeat 100%;  font-size: 12px; font-family: Verdana, Geneva, sans-serif; color: #3b6e81;"> 
    <form id="fm" action="DL" method="post" > 
          <div style="position: fixed; width:300px; height: 160px; margin-top: -10px; margin-left: -150px;top:50%;left:50%; box-shadow:rgba(255, 255, 255, 0.5) 0px 0px 5px ;">
            <div style=" width:200px; height: 100px;position:absolute;top:30px;left:30px; ">
                <div  style="margin-bottom: 10px; color:white">账号：<input name="User_ID" data-options="required:true"  type="text" style="width: 140px;" /></div> 
                <div  style="margin-bottom: 10px; color:white">密码：<input name="User_Pwd" data-options="required:true" type="password" style="width: 140px;" /></div>
               @* <input type="checkbox" data-bind="checked:form.remember" />系统记住我 *@
                <div>
                   @* <a href="Javascript:void(0)" style="width: 58px; height: 26px; line-height: 26px; border: none; color: #FFF; font-weight: bold; background: url(images/login1.jpg); margin-left: 15px;" onclick="login()">登录</a>
                    <a href="Javascript:void(0)" style="width: 58px; height: 26px; line-height: 26px; border: none; color: #FFF; font-weight: bold; background: url(images/reset.jpg); margin-left: 15px;" onclick="reset()">重置</a>*@
                    <input type="submit" value="登录" style="width: 58px; height: 26px; line-height: 26px; border: none; color: #FFF; font-weight: bold; background: url(@Url.Content("~/Content/images/login1.jpg")); margin-left: 35px;"  />
                    <input type="button" value="重置" style="width: 58px; height: 26px; line-height: 26px; border: none; color: #FFF; font-weight: bold; background: url(@Url.Content("~/Content/images/reset.jpg")); margin-left: 25px;" onclick="reset()"/>
                    <span style="color:red;">@ViewBag.message</span>
                </div>
            </div>
        </div>
    </form> 
    <script type="text/javascript">
        function reset() {
            $('#fm').form('clear');
        }
    </script>
</body>
</html>
