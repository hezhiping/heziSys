<!DOCTYPE html>
@using System.Data;
@using HZ.Data.BLL;
@using HZ.Data.Model;
@using HZ.Web;
@using System.Configuration;
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title  </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- easyUI SCRIPT -->
    <link href="@Url.Content("~/Content/themes/default/easyui.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/color.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/Site.css")" rel="stylesheet" />
    <!-- easyUI SCRIPT -->
    @RenderSection("PageSpecificStyleSheetIncludes", required: false)

    <link rel="stylesheet"  href="@Url.Content("~/html/css/cloud-admin.css")">
    <link rel="stylesheet"  href="@Url.Content("~/html/css/themes/default.css")" id="skin-switcher">
    <link rel="stylesheet"  href="@Url.Content("~/html/css/responsive.css")">
    <!-- STYLESHEETS -->
    <!--[if lt IE 9]><script src="js/flot/excanvas.min.js"></script><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script><![endif]-->
    <link href="@Url.Content("~/html/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
    <!-- ANIMATE -->
    <link rel="stylesheet"  href="@Url.Content("~/html/css/animatecss/animate.min.css")" />
    <!-- DATE RANGE PICKER -->
    <link rel="stylesheet"  href="@Url.Content("~/html/js/bootstrap-daterangepicker/daterangepicker-bs3.css")" />
    <!-- FONTS -->
    @*<link href='http://fonts.useso.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet'>*@
    
</head>

<body>
    <!-- HEADER -->
    <header class="navbar clearfix" id="header">
        @Html.Partial("_Header")
    </header>
    <!--/HEADER -->


    <!-- PAGE -->
    <section id="page">
        <!-- SIDEBAR -->
        @Html.Partial("_Menu")
        <!-- /SIDEBAR -->
        <div id="main-content">
            <div class="container">
                <div class="row">
                    <div id="content" class="col-lg-12">
                        <!-- PAGE HEADER-->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="page-header">
                                    <!-- BREADCRUMBS -->
                                    <ul class="breadcrumb">
                                        <li>
                                            <i class="fa fa-home"></i>
                                            <a href="index.html">Home</a>
                                        </li>
                                        <li>Dashboard - shared on weidea.net</li>
                                    </ul>
                                    <!-- /BREADCRUMBS -->
                                    <div class="clearfix">
                                        <h3 class="content-title pull-left">Dashboard</h3>

                                    </div>
                                    <div class="description">Overview, Statistics and more</div>
                                </div>
                            </div>
                        </div>

                        @RenderBody()
                    </div>
                    <!-- /CONTENT-->
                </div>
            </div>
        </div>
    </section>
     <script type="text/javascript">
         var staticFileRoot = "@Url.StaticFile()";
	</script>

    <!--/PAGE -->
    <!-- JAVASCRIPTS -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- JQUERY -->
        <!-- easyUI SCRIPT -->
    <script src="@Url.Content("~/Content/Scripts/jquery-1.11.1.min.js")"></script>
    <!-- easyUI SCRIPT -->
    <script src="@Url.Content("~/html/js/jquery/jquery-2.0.3.min.js")"></script>
    <!-- JQUERY UI-->
    <script src="@Url.Content("~/html/js/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.min.js")"></script>
    <!-- BOOTSTRAP -->
    <script src="@Url.Content("~/html/bootstrap-dist/js/bootstrap.min.js")"></script>
    
    <script src="@Url.Content("~/Content/Scripts/jquery.easyui.min.js")"></script>
    <!-- DATE RANGE PICKER -->
    <script src="@Url.Content("~/html/js/bootstrap-daterangepicker/moment.min.js")"></script>
    <script src="@Url.Content("~/html/js/bootstrap-daterangepicker/daterangepicker.min.js")"></script>
    <!-- SLIMSCROLL -->
    <script  src="@Url.Content("~/html/js/jQuery-slimScroll-1.3.0/jquery.slimscroll.min.js")"></script>
    <!-- BLOCK UI -->
    <script src="@Url.Content("~/html/js/jQuery-BlockUI/jquery.blockUI.min.js")"></script>
    <!-- COOKIE -->
    <script  src="@Url.Content("~/html/js/jQuery-Cookie/jquery.cookie.min.js")"></script>
    <!-- CUSTOM SCRIPT -->
    <script src="@Url.Content("~/html/js/script.js")"></script>
    
    <script src="@Url.Content("~/Content/Scripts/lang/easyui-lang-zh_CN.js")"></script>
    <script src="@Url.Content("~/Content/Scripts/HZ-1.0.js")"></script>
    <script type="text/javascript">
        var menuid = "@ViewData["MenuID"]";
        jQuery(document).ready(function () {
            App.init(); //Initialise plugins and elements
            @if (ViewData["MenuID"] != null)
            {
                if (!UserContext.CheckPower(ViewData["MenuID"].ToString(), ButtonKeys.DELETE.ToString()))
                {
                    @Html.Raw("$('#DELETE').hide();");
                }
                if (!UserContext.CheckPower(ViewData["MenuID"].ToString(), ButtonKeys.ADD.ToString()))
                {
                    @Html.Raw("$('#ADD').hide();");
                }
                if (!UserContext.CheckPower(ViewData["MenuID"].ToString(), ButtonKeys.MODIFY.ToString()))
                {
                    @Html.Raw("$('a[id^=MODIFY]').hide();power_modify=false;");//匹配相应的如MODIFY1 MODIFY2等都使用该
                }
                else
                {
                    @Html.Raw("power_modify=true;");//双击修改
                }
                if (!UserContext.CheckPower(ViewData["MenuID"].ToString(), ButtonKeys.EXPORT.ToString()))
                {
                    @Html.Raw("$('a[id=EXPORT]').hide();");
                }
                if (!UserContext.CheckPower(ViewData["MenuID"].ToString(), ButtonKeys.ADMIT.ToString()))
                {
                    @Html.Raw("$('a[id=ADMIT]').hide();");
                }
                if (!UserContext.CheckPower(ViewData["MenuID"].ToString(), ButtonKeys.PRINT.ToString()))
                {
                    @Html.Raw("$('a[id=PRINT]').hide();");
                }
            }
            $("a").each(function () { this.ondragstart = function () { return false; }; })
        });
    </script>
    <!-- /JAVASCRIPTS -->
    @RenderSection("PageSpecificJavascriptIncludes", required: false)
</body>
</html>
